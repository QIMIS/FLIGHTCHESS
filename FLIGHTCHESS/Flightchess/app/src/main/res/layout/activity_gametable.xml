<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chm.flightchess.GAMETABLE"
    android:orientation="vertical"
    android:background="@drawable/background">

    <AbsoluteLayout
        android:layout_width="@dimen/x320"
        android:layout_height="@dimen/x320">

        <ImageView

            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/chessmap" />

        <ImageView
            android:id="@+id/RC_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_x="@dimen/x46"
            android:layout_y="@dimen/y15"
            android:background="@drawable/planerw" />

        <ImageView
            android:id="@+id/RC_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_x="@dimen/x21"
            android:layout_y="@dimen/y37"
            android:background="@drawable/planerw" />

        <ImageView
            android:id="@+id/RC_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_x="@dimen/x46"
            android:layout_y="@dimen/y37"
