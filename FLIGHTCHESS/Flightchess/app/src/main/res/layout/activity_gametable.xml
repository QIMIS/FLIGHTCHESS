            android:id="@+id/GC_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_x="@dimen/x280"
            android:layout_y="@dimen/y231"
            android:background="@drawable/planegw" />

        <ImageView
            android:id="@+id/GC_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_x="@dimen/x280"
            android:layout_y="@dimen/y209"
            android:background="@drawable/planegw" />

        <ImageView
